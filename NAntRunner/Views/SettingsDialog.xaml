<UserControl x:Class="NAntRunner.Views.SettingsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.14.0"
             xmlns:local="clr-namespace:NAntRunner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ui:DialogWindow Title="Settings Dialog">
        <StackPanel Orientation="Vertical">
            <TextBox>Command</TextBox>
            <TextBox>Parameter</TextBox>
            <CheckBox Content="Split"/>
            <CheckBox Content="Global"/>
            <CheckBox Content="AutoClear"/>
            <CheckBox Content="Verbose"/>
            <CheckBox Content="AutoLoad"/>
        </StackPanel>
    </ui:DialogWindow>
</UserControl>
